
<div class="w3-row">
        <p>ArtcleRef:&nbsp;{{genxml.data.genxml.textbox.articleref}}</p><br />

        <div class="product">

            <div class="productimg">

                <div class="w3-content" style="max-width:1200px">

                    <div class="w3-row">

                        {{#each genxml.data.genxml.imagelist.genxml}}
                        {{#if @first}}
                        <img class="sliderind{{@root.genxml.sessionparams.r.moduleref}}" src="{{thumbnailimageurl @root.genxml.sessionparams.r.engineurl hidden.imagepatharticleimage 640 200  }}" style="width:100%">
                        {{else}}
                        <img class="sliderind{{@root.genxml.sessionparams.r.moduleref}}" src="{{thumbnailimageurl @root.genxml.sessionparams.r.engineurl hidden.imagepatharticleimage 640 200  }}" style="width:100%;display:none;">
                        {{/if}}
                        {{/each}}

                    </div>

                    <div class="w3-row" style="margin: 8px -8px;">

                        {{#each genxml.data.genxml.imagelist.genxml}}
                        <div class="w3-col s6 m4 l2 w3-padding-small" style="margin-bottom: 8px">
                            <img class="demo{{@root.genxml.sessionparams.r.moduleref}} w3-opacity w3-hover-opacity-off" src="{{thumbnailimageurl @root.genxml.sessionparams.r.engineurl hidden.imagepatharticleimage 300 200  }}" style="width:100%;cursor:pointer" onclick="currentDiv{{@root.genxml.sessionparams.r.moduleref}}({{@index}})">
                        </div>
                        {{/each}}


                    </div>

                </div>



                {{#each genxml.data.genxml.imagelist.genxml}}
                <img class="w3-padding-small" src="{{thumbnailimageurl @root.genxml.sessionparams.r.engineurl hidden.imagepatharticleimage 480 480  }}" style="width:100%">
                {{/each}}

                <!-- Rollover -->
                <div class="productrollover">
                    <div class="productrollover-content">
                        <div class="productrollover-actions">
                            <a href="@articleListUrl">@ResourceKey("theme.details", sessionParams.CultureCode)</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="productcontent">
                <h3><a href="@articleListUrl">@articleData.Name</a></h3>
                <div class="w3-row">
                    <div class="w3-padding">
                        <div class="productprice">@articleData.Info.GetXmlPropertyDecimal("genxml/textbox/price").ToString("C2", CultureInfo.CurrentCulture)</div>
                    </div>
                </div>
            </div>

        </div>

</div>

{{! displayData this}}

